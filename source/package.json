{
  "name": "webview-app",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "electron .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "npm run build:win64 && npm run build:osx",
    "build:osx": "electron-builder --mac",
    "build:linux": "npm run build:linux32 && npm run build:linux64",
    "build:linux32": "electron-builder --linux --ia32",
    "build:linux64": "electron-builder --linux --x64",
    "build:win": "npm run build:win32 && npm run build:win64",
    "build:win32": "electron-builder --win --ia32",
    "build:win64": "electron-builder --win --x64"
  },
  "author": "ACGR",
  "license": "ISC",
  "devDependencies": {
    "electron": "^26.1.0",
    "electron-builder": "^24.6.3"
  },
  "dependencies": {
    "find-process": "^1.4.7",
    "systeminformation": "^5.21.3"
  },
  "build": {
    "productName": "ACGR_ONLINE",
    "appId": "kr.co.acghr",
    "asar": true,
    "mac": {
      "target": [
        "default"
      ],
      "icon": "./ico/favicon.icns"
    },
    "dmg": {
      "title": "ACGR_ONLINE",
      "icon": "./ico/favicon.ico"
    },
    "win": {
      "target": [
        "zip",
        "nsis"
      ],
      "icon": "./ico/favicon.ico",
      "certificateFile": "certificate/cert.pfx",
      "certificatePassword": "Acg6185"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm",
        "zip",
        "tar.gz"
      ],
      "icon": "./ico/favicon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": false,
      "installerLanguages": [
        "en_US",
        "ko_KR"
      ],
      "language": "1042"
    },
    "directories": {
      "buildResources": "resources/installer/",
      "output": "build/",
      "app": "."
    }
  }
}
